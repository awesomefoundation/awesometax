<!doctype html>  
<head>

  <title><%= defined?(@subtitle) ? "#{h(@subtitle)} - LoveTax" : "LoveTax" %></title>
  <meta name="description" content="">
  <meta name="author" content="">
  <meta charset="utf-8">
  
  <!--  Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- CSS : implied media="all" -->
  <link rel="stylesheet" href="/stylesheets/style.css?v=2">
  <link rel="stylesheet" href="/stylesheets/960.css">
  <link rel="stylesheet" href="/stylesheets/lovetax.css">
  <!-- Uncomment if you are specifically targeting less enabled mobile browsers
  <link rel="stylesheet" media="handheld" href="css/handheld.css?v=2">  -->
  <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
 
  <!-- All JavaScript at the bottom, except for Modernizr which enables HTML5 elements & feature detects -->
  <script src="/javascripts/modernizr-1.7.min.js"></script>
  <!-- Grab Google CDN's jQuery. fall back to local if necessary -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.js"></script>
  <script>!window.jQuery && document.write(unescape('%3Cscript src="js/libs/jquery-1.5.1.min.js"%3E%3C/script%3E'))</script>
  <script src="/javascripts/jquery.masonry.js"></script>
</head>

<body>

<div id='top' class='tk-league-gothic'>
  <div class='container_12 container'>
    <div class='grid_12'>
      <ul class='nav'>
      <li>LOVE<span style='color: #444;'>TAX</span></li>
      <li><%= link_to 'Home', root_path %></li>
      <li><%= link_to 'Guide', guide_path %></li>
      <li><%= link_to 'Taxes', taxes_path %></li>
      <% if user_signed_in? %>
        <li><%= link_to 'Me', account_path %>
          <ul>
            <% if admin? %>
              <li><%= link_to 'Admin', mgmt_path %></li>
            <% end %>
            <li><%= link_to 'My Taxes', account_path %></li>
            <li><%= link_to 'My History', history_path %></li>
            <li><%= link_to 'Settings', edit_account_path %></li>
            <li><%= link_to 'Log out', destroy_user_session_path %></li>
          </ul>
      <% else %>
        <li><%= link_to 'Log in', new_user_session_path %></li>
      <% end %>
      </ul>
      <div class='float_right tally tk-ff-tisa-web-pro'><%= raw("#{pluralize(num_taxpayers, 'taxpayer')} &middot; #{number_to_currency(total_monthly)} in monthly taxes") %></div>
    </div>
  </div>
  <div class='clear'></div>
</div>

  <% if defined?(@no12) and @no12 %>
    <%= yield %>
  <% else %>
    <div class="container_12 container">
      <div class="grid_12">
        <%= yield %>
      </div>
    </div> <!--! end of #container -->
  <% end %>
  <div class='clear' style='height: 3em;'></div>


  <!-- Javascript at the bottom for fast page loading -->

  <script type="text/javascript" src="http://use.typekit.com/szj4uep.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>  
