!!!
%head
  %title
    - if defined?(@subtitle)
      = "#{@subtitle} -"
    AwesomeTax
    - if Rails.env != 'production'
      = "(#{Rails.env})"
  %meta{:content => "", :name => "description"}/
  %meta{:content => "", :name => "author"}/
  %meta{:charset => "utf-8"}/
  %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  %link{:href => "/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}/
  = stylesheet_link_tag 'bootstrap', '960', 'lovetax'
  = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.js', 'bootstrap-dropdown.js'

%body
  .topbar-wrapper{:style => "z-index: 5;"}
    .topbar{'data-dropdown' => 'dropdown'}
      .topbar-inner
        .container
          .h3.float_left AwesomeTax
          %ul.nav
            %li{:class => current_page?(root_path)  ? 'active' : ''}= link_to 'Home',     root_path
            %li{:class => current_page?(taxes_path) ? 'active' : ''}= link_to 'Chapters', taxes_path
            %li{:class => current_page?(guide_path) ? 'active' : ''}= link_to 'Guide',    guide_path
            %li{:class => current_page?(mock_path)  ? 'active' : ''}= link_to 'Widget',   mock_path
            %li.dropdown
              %a.dropdown-toggle{:href => '#'} Foundation
              %ul.dropdown-menu
                %li= link_to 'Awesome Foundation', 'http://awesomefoundation.org', :target => '_blank'
                %li= link_to 'Institute on Higher Awesome Studies', 'http://blog.awesomestudies.org', :target => '_blank'
            
          - if user_signed_in?
            %ul.nav.secondary-nav
              %li.dropdown
                %a.dropdown-toggle{:href => '#'} Account
                %ul.dropdown-menu
                  - if admin? or board?
                    %li= link_to 'Administration',  admin_path
                  %li= link_to 'My Taxes',          account_path
                  %li= link_to 'My History',        history_path
                  %li= link_to 'Edit Profile',      edit_account_path
                  %li= link_to 'Sign Out',          logout_path
          - else
            %ul.nav.secondary-nav
              %li= link_to 'Sign In', login_path
    .clear
  - if flash[:notice]
    .container_12.container
      .grid_12.centered.alert-message= flash[:notice]
      
  - if defined?(@no12) and @no12
    = yield
  - else
    .container_12.container
      .grid_12
        = yield
    / ! end of #container
  .clear{:style => "height: 3em;"}
  / Javascript at the bottom for fast page loading
  %script{:src => "http://use.typekit.com/szj4uep.js", :type => "text/javascript"}
  :javascript
    //try{Typekit.load();}catch(e){}
  :javascript
    var _gaq = [['_setAccount', '#{AppConfig.analytics_key}'], ['_trackPageview']];
    (function(d, t) {
     var g = d.createElement(t),
         s = d.getElementsByTagName(t)[0];
     g.async = true;
     g.src = ('https:' == location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
     s.parentNode.insertBefore(g, s);
    })(document, 'script');
  